<table cellpadding="8">
  <tr>
  	<th>Date</th>
  	<th>duration</th>
  	<th>Notes</th>
  </tr>

<% for meeting in @client.meetings %>
  <tr>
  	<td><%=h meeting.start_date.to_s(:short) %>
    <td><%=h distance_of_time_in_words(meeting.duration) %></td>
    <td><%=h meeting.memo %></td>
  </tr>

<% if meeting.sales_reps.blank? %>
  <h4>No any Sales Reps attending this meeting</h4>
<% end %>

<% end %>
</table>

