<h1>Listing Meetings</h1>
<% if @meetings.blank? %>
	<h2>There are no any meetings</h2>
<% else %>
	<table cellpadding="8" class="table table-striped">
		<tr>
			<th>Date</th>
			<th>Duration</th>
			<th>Memo</th>
			<th>Has followups</th>
			<th>Client Name</th>
			<th>Sales reps</th>
			
			<th></th>
			<th></th>
		</tr>
		<% for meeting in @meetings %>	
		<tr>
			<td><%=h meeting.start_date.to_s(:short) %></td>
			<td><%=h meeting.duration %> Minutes </td>
			<td><%=h truncate(meeting.memo, length: 20) %></td>
			<% if meeting.follow_ups.any?%>
			  <td align="center"><span class="badge badge-success" ><%=h "#{meeting.follow_ups.count}" %></span></td>
			<%else%>
			  <td align="center" >-</td>
			<% end %>
			<td><%=h meeting.client.name %></td>
			<td>
				<%=h meeting.sales_reps.map(&:name).join(", ")%>
	 		</td>

			<td><%= link_to 'Show/Edit', edit_meeting_path(meeting) %> </td>
			<td><%= link_to 'Delete', meeting, method: :delete, data: { confirm: 'Are you sure?'} %></td>
		</tr>
		<% end %>
	</table>
<% end %>
<%= link_to 'New Meeting', new_meeting_path, {class:"btn btn-primary btn-lg"}  %>
