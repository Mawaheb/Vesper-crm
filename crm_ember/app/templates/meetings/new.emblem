.row
  .col-md-9
    .well
      .row
        .col-md-4
          label Meeting Date
          = bs-datetimepicker value=startDate date=startDate format='YYYY-MM-DD HH:mm'
        .col-md-3
          label Duration
          view 'select' value=duration content=durations class="form-control"

        .col-md-5
          label Select Client
          view 'select' selection=client content=clients optionLabelPath="content.name" optionValuePath="content.id"  prompt='Please select a client..' class="form-control"
      .row
        .col-lg-12
          label Memo
          Ember.TextArea value=memo class="form-control" rows="5"

  .col-md-3
    .panel.panel-primary
      .panel-heading Assign Sales Reps:
      .panel-body
        each sr in sReps
          check-box action="assignSReps" value=sr
          label #{sr.name}
          %br

      .panel-heading Assign Contacts:
      .panel-body
        each contact in contactsArr
          check-box action="assignContacts" value=contact 
          label #{contact.name}
          %br  
          
        



button.btn.btn-success{action 'save'} Save 