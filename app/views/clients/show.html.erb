<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @client.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @client.last_name %>
</p>

<p>
  <b>Company name:</b>
  <%= @client.company_name %>
</p>

<p>
  <b>Sex:</b>
  <%= @client.sex %>
</p>

<p>
  <b>Status:</b>
  <%= @client.status%>
</p>

<ul>
<% for contact in @client.contacts %>
  <b>Phone:</b>
  <%=h contact.phone %> <br />
  <b>Email:</b>
  <%=h contact.email %> <br />
  <b>Address:</b>
  <%=h contact.address %> <br />
  <br />
<% end %>
</ul>


<%= link_to 'Edit', edit_client_path(@client) %> |
