<h1>Listing Meetings</h1>
<% if @meetings.blank? %>
<h2>There are no any meetings</h2>
<% else %>
<table cellpadding="8" class="table table-striped">
	<tr>
		<th>Date</th>
		<th>Duration</th>
		<th>Memo</th>
		<th>Has followups</th>
		<th>Client Name</th>
		<th>Sales reps</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% for meeting in @meetings %>
	<tr>
		<td><%=h meeting.start_date.to_s(:short) %></td>
		<td><%=h meeting.duration %> Minutes</td>
		<td><%=h meeting.memo %></td>
		<% if meeting.follow_ups.any?%>
		  <td>Yes</td>
		<%else%>
		  <td>No</td>
		<% end %>
		<td><%=h Client.find_by(id: meeting.client_id).name %></td>
		<td>
			<% meeting.sales_rep_ids.each do |i|%>
				<%=h SalesRep.find_by(id: i).name + "," %>
			<% end %>
 		</td>
 
		<td><%= link_to 'Show', meeting %></td>
		<td><%= link_to 'Edit', edit_meeting_path(meeting) %> </td>
		<td><%= link_to 'Delete', meeting, method: :delete, data: { confirm: 'Are you sure?'} %></td>
	</tr>
	<% end %>
</table>
<% end %>
<%= link_to 'New Meeting', new_meeting_path, {class:"btn btn-primary btn-lg"}  %>
